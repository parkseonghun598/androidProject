<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <!-- 상단 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="#FDF9F1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="202dp"
            android:layout_height="71dp"
            android:contentDescription="로고"
            android:src="@drawable/logo" />

    </LinearLayout>

    <!-- 탭 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#7A9B7A">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTabSchedule"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="일정"
                android:background="@android:color/transparent"
                android:textColor="#000000"/>

            <View
                android:id="@+id/underlineSchedule"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#FFFFFF"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTabRecommend"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="추천"
                android:padding="12px"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <View
                android:id="@+id/underlineRecommend"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#FFFFFF"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTabStats"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="통계"
                android:background="@android:color/transparent"
                android:textColor="#000000"/>

            <View
                android:id="@+id/underlineStats"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#FFFFFF"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 탭 컨텐츠 영역 -->
    <FrameLayout
        android:id="@+id/tabContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>